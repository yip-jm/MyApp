<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myradiobutton">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/background</item>
    </style>

    <style name="myeditext">
        <item name="colorControlNormal">@color/deep_grey</item>
        <item name="colorControlActivated">@color/background</item>
    </style>


    <style name="TabSelected">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="TabUnSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/deep_grey</item>
    </style>


</resources>